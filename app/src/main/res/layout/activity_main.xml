<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- container for buttons -->
    <LinearLayout
        android:id="@+id/button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_actionbar"
        app:layout_constraintTop_toBottomOf="@+id/top_actionbar"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="#FFBB32">

    </LinearLayout>

    <!-- bottom action bar-->
    <FrameLayout
        android:id="@+id/bottom_actionbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00DAC5">

    </FrameLayout>

    <!-- top action bar -->
    <FrameLayout
        android:id="@+id/top_actionbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#3800B3">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>