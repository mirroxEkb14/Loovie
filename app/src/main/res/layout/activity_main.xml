<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient"
    tools:context=".MainActivity">

    <!-- top app bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/page_title"
            app:navigationIcon="@drawable/ic_baseline_menu_24"
            app:menu="@menu/top_toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- top action bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/top_actionbar"
        app:layout_constraintTop_toBottomOf="@id/appbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rain_man"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bad_boys"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bohemian_phapsody"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/the_hunger_games_mockingjay_part1"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/disclaimer"
        app:layout_constraintTop_toBottomOf="@+id/top_actionbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disclaimer"
        android:layout_marginTop="16dp"
        android:autoLink="web"
        android:linksClickable="true"/>

    <GridLayout
        android:id="@+id/card_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/disclaimer"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        android:layoutAnimation="@anim/card_animation">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_poster1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            android:stateListAnimator="@animator/press_button_animation">

            <ImageView
                android:id="@+id/main_poster1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/righteous_kill"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_poster2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            android:stateListAnimator="@animator/press_button_animation">

            <ImageView
                android:id="@+id/main_poster2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/big_lebowski"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_poster3"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            android:stateListAnimator="@animator/press_button_animation">

            <ImageView
                android:id="@+id/main_poster3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/coco"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_poster4"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            android:clickable="true"
            android:stateListAnimator="@animator/press_button_animation">

            <ImageView
                android:id="@+id/main_poster4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/requiem_for_a_dream"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </GridLayout>

    <!-- bottom action bar-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary_dark"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>